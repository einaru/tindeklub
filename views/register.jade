extends layouts/nobanner

block main
	main(role="main")
		.container
			h1 Register
			form#registration-form(action="/register", method="post")
				div
					label(for="name.first") First name
					div
						input(type="text", name="name.first")
				div
					label(for="name.last") Last name
					div
						input(type="text", name="name.last")
				div
					label(for=everyauth.password.loginFormFieldName) Email
					div
						input(type="email", name=everyauth.password.loginFormFieldName, value=userParams[everyauth.password.loginFormFieldName])
				div
					label(for=everyauth.password.passwordFormFieldName) Password
					div
						input(type="password", name=everyauth.password.passwordFormFieldName)
				.actions
					input(type="submit", value="Register")
					p
						<strong>Already got an account?</strong> Login <a href="/login">here</a>.

